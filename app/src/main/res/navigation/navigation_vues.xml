    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_list_series">

    <fragment
        android:id="@+id/fragment_list_series"
        android:name="com.example.projetnav.ui.series.FragmentListSeries"
        android:label="List Series Fragment">
        <action
            android:id="@+id/action_list_to_serie"
            app:destination="@id/fragment_serie">
            <argument
                android:name="serieTitle"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/fragment_serie"
        android:name="com.example.projetnav.ui.series.FragmentSerie"
        android:label="Serie Fragment"/>
