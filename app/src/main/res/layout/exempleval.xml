<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agents of S.H.I.E.L.D"
        android:textSize="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/image_exemple"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        app:layout_constraintStart_toStartOf="@id/titre"/>
    <TextView
        android:id="@+id/producteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marvel"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/image"
        app:layout_constraintStart_toEndOf="@id/image"/>

    <TextView
        android:id="@+id/episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="136 Ã©pisodes"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/producteur"
        app:layout_constraintStart_toStartOf="@id/producteur"/>

    <TextView
        android:id="@+id/annee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2013"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/episodes"
        app:layout_constraintStart_toStartOf="@id/producteur"/>

    <Button
        android:id="@+id/histoire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histoire"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintStart_toStartOf="@id/image"/>

    <Button
        android:id="@+id/personnages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personnages"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/histoire"
        app:layout_constraintStart_toEndOf="@id/histoire"/>

    <TextView
        android:id="@+id/episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2013"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/personnages"
        app:layout_constraintStart_toEndOf="@id/producteur"/>

    <TextView
        android:id="@+id/synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2013"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/episodes"
        app:layout_constraintStart_toStartOf="@id/producteur"/>

</androidx.constraintlayout.widget.ConstraintLayout>